@page "/users"
@using BlazorServerApp.Models
@using BlazorServerApp.Controllers
@inject NavigationManager NavManager

<h2>Lista de Usuarios</h2>

<table class="users-table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Username</th>
            <th>Email</th>
            <th>Edad</th>
            <th>Editar</th> 
            <th>Borrar</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var user in users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Age</td>
                <td>
                    <button class="edit-button" @onclick="(() => EditUser(user))">Editar</button>
                </td>
                <td>
                    <button class="delete-button" @onclick="(() => DeleteUser(user))">Borrar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .users-table {
        width: 100%;
        border-collapse: collapse;
    }

        .users-table th, .users-table td {
            border: 1px solid #ccc;
            padding: 10px 15px;
            text-align: left;
        }

        .users-table thead {
            background-color: #f3f4f6;
        }

        .users-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .users-table tbody tr:hover {
            background-color: #e9e9e9;
        }

    .edit-button {
        background-color: #007BFF;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 3px;
        cursor: pointer;
    }

    .delete-button {
        background-color: #FF0000;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 3px;
        cursor: pointer;
    }
</style>

@code {
    private List<User> users = new List<User>();

    public UserController userController = new UserController();

    protected override async Task OnInitializedAsync()
    {
        users = await userController.GetAllUsers();
    }

    private void EditUser(User user)
    {
        NavManager.NavigateTo($"/register/{user.UserId}");
    }

    private async void DeleteUser(User user)
    {
        await userController.DeleteUser(user.UserId);
        users = await userController.GetAllUsers();
    }
}